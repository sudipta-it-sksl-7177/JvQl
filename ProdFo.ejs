<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/ProdEntry.css">
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script> -->
    <script src="/js/angular_169.min.js"></script>
    <title>Production Entry</title>
</head>
<body>
    <form id="WfProdFo" action="/steel/production/fo" method="POST">
        <h2>Steel Plant (Bilaspur) Furnace Oil & Power Entry</h2>
        <h3>JOB : <%= MyJob.JobDesc  %> </h3>
        <div ng-app="FoProdApp" ng-controller="FoProdCtrl">
            <table id="TblEntry">

                <tr>
                    <td style="text-align: right;font-weight: bold">DATE</td>
                    <td style="text-align: center;font-weight: bold">:</td>
                    <td>
                        <input type="text" id="DtProdID" class="ClsDate" name="JobDate" class="ClsDate" value=<%= MyJob.JobDate %> readonly>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>

                <tr>
                    <td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                </tr>

                <tr>
                    <td></td>
                    <td></td>
                    <td style="text-align: center;font-weight: bold">STOCK</td>
                    <td></td>
                    <td></td>
                    <td style="text-align: center;font-weight: bold">PREVIOUS</td>
                    <td></td>
                    <td style="text-align: center;font-weight: bold">CURRENT</td>
                    <td></td><td></td>
                    <td style="text-align: center;font-weight: bold">BALANCE</td>
                </tr>

                <tr>
                    <td style="text-align: right;font-weight: bold">FURNACE OIL (KL)</td>
                    <td style="text-align: center;font-weight: bold">:</td>
                    <td>
                        <input type="number" class="ClsStk" id="IdStkFo"
                        ng-model="StkFo=<%= MyJob.Product[0].FOILOP %>" disabled>
                    </td>
                    <td style="text-align: center;font-weight: bold">-</td>
                    <td>(</td>
                    <td>
                        <input type="number" class="ClsPrv" ng-model="PrvFo=<%= MyJob.Product[0].FOILCUR %>" disabled>
                    </td>
                    <td>/</td>
                    <td>
                        <input type="number" class="ClsCon" id="IdConFo" name="Fo"
                        ng-model="ConFo" min="0.0000" max="999.9999" step="0.0001" required>
                    </td>
                    <td>)</td>
                    <td style="text-align: center;font-weight: bold">=</td>
                    <td>
                        <input type="number" class="ClsBal" value="{{BalFo()}}" disabled>
                    </td>
                </tr>


                <tr>
                    <td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                </tr>

                <tr>
                    <td style="text-align: right;font-weight: bold">POWER (KW)</td>
                    <td style="text-align: center;font-weight: bold">:</td>
                    <td></td>
                    <td></td>
                    <td>(</td>
                    <td>
                        <input type="number" class="ClsPrv" ng-model="PrvPw=<%= MyJob.Product[0].POWERCUR %>" disabled>
                    </td>
                    <td>/</td>
                    <td>
                        <input type="number" class="ClsCon" id="IdConPw" name="Power"
                        ng-model="ConPw" min="0.0000" max="999999.9999" step="0.0001" required>
                    </td>
                    <td>)</td>
                    <td></td>
                    <td>
                    </td>
                </tr>


                <tr>
                    <td></td><td></td><td></td><td></td><td></td><td></td>
                    <td></td>
                    <td></td>
                    <td></td><td></td>
                    <td>
                        <button type="submit" id="IdBtnFo" name="BtnFo" class="ClsButton">Confirm</button>
                    </td>
                </tr>

            </table>
        </div>
    </form>
    <script src="/js/Prod.js"></script>
    <script src="/js/ProdNg.js"></script>
</body>